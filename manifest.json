{
  "name": "Blossom",
  "description": "Blossom Fairdata Protocol Browser Extension",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "main.js"
  },
  "action": {
    "default_popup": "menu.html"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["content.js"]
    }
  ],
  "options_page": "auth.html",
  "permissions": ["storage"],
  "host_permissions": ["https://*/*", "http://*/*"]
}
